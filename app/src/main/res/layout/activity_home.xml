<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/homes">

        <!-- Top Bar with Logout and Profile -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">

            <!-- Logout Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <ImageView
                    android:id="@+id/btnLogout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Logout"
                    android:src="@drawable/ic_logout"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/btnProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Profile"
                    android:padding="8dp"
                    android:src="@drawable/default_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Header Text -->
        <TextView
            android:id="@+id/tvEmotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginTop="16dp"
            android:text="EMOSPHERE! A PLACE OF EMOTIONS."
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/font"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <!-- Subheading -->
        <TextView
            android:id="@+id/tvPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmotions"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Let us know how/what you are feeling right now by taking a picture"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/font"
            android:textSize="14sp" />

        <!-- Button Group -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrompt"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOpenCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#000000"
                android:text="Take Picture"
                android:fontFamily="@font/font"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnUploadPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="Upload Picture"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/font" />
        </LinearLayout>

        <!-- Image Display -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/linearLayout"
            android:layout_marginTop="16dp"
            android:contentDescription="Captured Image"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="#DDDDDD" />

        <!-- Detected Emotion Text -->
        <TextView
            android:id="@+id/detectedEmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Detected Emotion: "
            android:textColor="#000000"
            android:fontFamily="@font/font"
            android:textSize="16sp" />

        <!-- Insight Text -->
        <TextView
            android:id="@+id/insightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detectedEmotion"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Insight will appear here."
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            android:background="#f0f0f0" />

        <!-- Consultation Layout -->
        <LinearLayout
            android:id="@+id/consultationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insightTextView"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvConsultationPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="WOULD YOU LIKE TO CONSULT PROFESSIONAL HELP?"
                android:textColor="#000000"
                android:fontFamily="@font/font"
                android:textSize="18sp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/countdownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Redirecting in 15 seconds..."
                android:textSize="12sp"
                android:textColor="#FA0000"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNoImOkay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#000000"
                    android:text="No, thanks."
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnYesPlease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:text="Yes please!"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Professional Help Button -->
        <Button
            android:id="@+id/btnProfessionalHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#000000"
            android:text="Visit Professional Help"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font" />

    </RelativeLayout>
</ScrollView>